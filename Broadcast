#include<stdio.h>
#include<mpi.h>
int main(int argc,char** argv)
{
    int rank,size;
    int b = 44;
    int b1;
    MPI_Init(&argc,&argv);
    MPI_Comm_rank(MPI_COMM_WORLD,&rank);
    MPI_Comm_size(MPI_COMM_WORLD,&size);
    MPI_Bcast(&b,1,MPI_INT,0,MPI_COMM_WORLD);
    printf("Process %d received the value %d\n",rank,b);
    MPI_Finalize();
    return 0;
}
